{
  "name": "noteնոց",
  "version": "1.0.0",
  "description": "store pdf notes in notion database",
  "manifest_version": 3,
  "author": "Hovhannes Tamoyan",
  "action": {
    "default_popup": "index.html",
    "default_title": "Noteնոց",
    "default_icon": "resources/icon.png"
  },
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["http://localhost:8214/*", "https://api.notion.com/v1/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self';  object-src http://localhost;"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
